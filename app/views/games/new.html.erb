<div class="container">
  <div class="row">
    <div class="col-6 text-center">
      <h1>New Game</h1>
      <ul>
        <% @letters.each do | letter | %>
          <li> <%= letter %> </li>
        <% end %>
      </ul>
      <form action="/score" method="post" class="form-group">
        <label for="word">What is the longest word you can find?</label>
        <input type="text" name="word" class="form-control">
        <input type="submit" class="btn btn-primary mt-3">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :original_letters, @letters %>
      </form>
    </div>
  </div>
</div>
